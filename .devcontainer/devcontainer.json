{
    "image": "docker.io/library/node:18-bullseye",
    "extensions": [
        "jack89ita.copy-filename",
        "kisstkondoros.vscode-gutter-preview",
        "Tyriar.luna-paint",
        "DavidAnson.vscode-markdownlint",
