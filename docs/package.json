{
  "dependencies": {
    "autoprefixer": "^10.4.4",
    "hugo-extended": "0.95.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.0.2"
  },
  "devDependencies": {
    "broken-link-checker": "^0.7.8",
    "http-server": "^14.1.0",
    "prettier": "^2.6.2",
    "start-server-and-test": "^1.14.0"
  },
  "scripts": {
    "build": "hugo --gc --cleanDestinationDir && python postprocess.py",
    "check-formatting": "prettier --check content/",
    "check-links-exec": "blc --input http://127.0.0.1:8080 --recursive --ordered --exclude https://github.com/bellflight/VRC-2022/ --exclude https://github.com/bellflight/VRC-2022/* --exclude https://vrcbellflight.sharepoint.com/*",
    "check-links-server": "http-server public/ --port 8080 --silent",
    "check-links": "start-server-and-test check-links-server http://127.0.0.1:8080 check-links-exec",
    "format": "prettier --write content/",
    "server": "hugo server"
  }
}
